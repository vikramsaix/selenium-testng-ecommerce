<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SmokeSuite" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="listeners.ExtentTestNGListener"/>
    </listeners>

    <test name="Chrome Smoke Tests">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.ECommercePurchaseTest"/>
            <class name="tests.LoginTest"/>
        </classes>
    </test>

    <test name="Firefox Smoke Tests">
        <parameter name="browser" value="firefox"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.ECommercePurchaseTest"/>
            <class name="tests.LoginTest"/>
        </classes>
    </test>

</suite>
